<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".CheckBackLaterActivity">



    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/maintenance"
        android:layout_marginRight="20dp"
        android:layout_marginTop="-100dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/Black"
        android:text="This page is not available at the moment. The engineers are performing maintenance. It will be available on the next update. Please visit Google PlayStore and update this app by Tomorrow. We are sorry for any inconveniences. Thank you!"
       />


    <Button
        android:id="@+id/buttonCheckBackDone"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/dark_red_button"
        android:text="Done"
        android:textColor="@color/White"
        android:layout_marginTop="20dp"
        />


</LinearLayout>