                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="11dp"
                    android:text="Title:"
                    android:textColor="@color/Red"
                    android:textSize="14dp"
                    app:fontFamily="@font/montserrat"/>


                <Spinner
                    android:id="@+id/spinnerSignUpUserTitle"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_bg"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/Black"
                    android:textSize="14dp" />



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <EditText
                        android:id="@+id/editTextSingUpUserFirstName"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/textView4"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="11dp"
                        android:cursorVisible="true"
                        android:ems="10"
                        android:hint="First Name"
                        android:inputType="textLongMessage"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/Black"
                        android:textCursorDrawable="@null"
                        android:textSize="14dp"
                        app:fontFamily="@font/montserrat"/>


                </com.google.android.material.textfield.TextInputLayout>





                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/editTextSignUpUserLastName"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/textView4"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="11dp"
                        android:cursorVisible="true"
                        android:ems="10"
                        android:hint="Last Name"
                        android:inputType="textLongMessage"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/Black"
                        android:textCursorDrawable="@null"
                        android:textSize="14dp"
                        app:fontFamily="@font/montserrat"/>


                </com.google.android.material.textfield.TextInputLayout>





                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <EditText
                        android:id="@+id/editTextSignUpUserPhoneNumber"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/textView4"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="11dp"
                        android:cursorVisible="true"
                        android:ems="10"
                        android:hint="Phone Number"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/Black"
                        android:textCursorDrawable="@null"
                        android:textSize="14dp"
                        app:fontFamily="@font/montserrat"/>


                </com.google.android.material.textfield.TextInputLayout>






                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/editTextSignUpUserEmailAddress"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/textView4"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="11dp"
                        android:cursorVisible="true"
                        android:ems="10"
                        android:hint="Email Address"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/Black"
                        android:textCursorDrawable="@null"
                        android:textSize="14dp"
                        app:fontFamily="@font/montserrat"/>

                </com.google.android.material.textfield.TextInputLayout>





                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <EditText
                        android:id="@+id/editTextSignUpUserPassword"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/textView4"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="11dp"
                        android:cursorVisible="true"
                        android:ems="10"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/Black"
                        android:textCursorDrawable="@null"
                        android:textSize="14dp"
                        app:fontFamily="@font/montserrat"/>


                </com.google.android.material.textfield.TextInputLayout>





                <Button
                    android:id="@+id/btnSignUpUserSignUp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/red_button"
                    android:text="Sign Up"
                    android:textColor="@color/White"
                    app:fontFamily="@font/montserrat"/>


                <Button
                    android:id="@+id/btnSignUpUserBackToHome"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/dark_blue_button"
                    android:text="Back to Home"
                    android:textColor="@color/White"
                    app:fontFamily="@font/montserrat"/>


                <com.google.android.gms.ads.AdView
                    xmlns:ads="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/adViewUserSignUp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    ads:adSize="BANNER"
                    ads:adUnitId="ca-app-pub-2954191210352297/6499414227" />



                <WebView
                    android:id="@+id/webviewSmsUserSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"/>


            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>