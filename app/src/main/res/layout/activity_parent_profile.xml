<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ParentProfileActivity">



<LinearLayout
    android:id="@+id/tabTeacherProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adViewParentProfile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-7947549094897909/9626397790" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="My Profile"
                android:textColor="@color/Black"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                app:fontFamily="@font/montserrat" />



                            <TextView
                            android:id="@+id/lblParentIdEdit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:visibility="invisible"
                            android:layout_marginLeft="0dp"
                            android:layout_marginStart="10dp"
                            android:textSize="10dp"
                            android:layout_alignParentLeft="true" />



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Title"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"/>

                        <Spinner
                            android:id="@+id/spinnerParentProfileTitle"
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/spinner_bg"
                            android:textColor="@color/Black" />



                        <EditText
                            android:id="@+id/editTextParentProfileFirstName"
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="11dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/text_edit_border_grey"
                            android:cursorVisible="true"
                            android:ems="10"
                            android:inputType="textLongMessage"
                            android:hint="First Name"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="10dp"
                            android:textColor="@color/Black"
                            android:textCursorDrawable="@null"
                            android:layout_below="@+id/textView4" />


                        <EditText
                            android:id="@+id/editTextParentProfileOtherNames"
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="11dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/text_edit_border_grey"
                            android:cursorVisible="true"
                            android:ems="10"
                            android:inputType="textLongMessage"
                            android:hint="Other Names"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="10dp"
                            android:textColor="@color/Black"
                            android:textCursorDrawable="@null"
                            android:layout_below="@+id/textView4" />



                        <EditText
                            android:id="@+id/editTextParentProfileLastName"
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="11dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/text_edit_border_grey"
                            android:cursorVisible="true"
                            android:ems="10"
                            android:inputType="textLongMessage"
                            android:hint="Last Name"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="10dp"
                            android:textColor="@color/Black"
                            android:textCursorDrawable="@null"
                            android:layout_below="@+id/textView4" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sex"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"/>

                        <Spinner
                            android:id="@+id/spinnerParentProfileSex"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/spinner_bg"
                            android:textColor="@color/Black" />



                        <EditText
                            android:id="@+id/editTextParentProfileHomeAddress"
                            android:layout_width="fill_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="11dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/text_edit_border_grey"
                            android:cursorVisible="true"
                            android:ems="10"
                            android:inputType="textLongMessage"
                            android:hint="Home Address"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="10dp"
                            android:textColor="@color/Black"
                            android:textCursorDrawable="@null"
                            android:layout_below="@+id/textView4" />



                        <EditText
                            android:id="@+id/editTextParentProfilePhoneNumber"
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="11dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/text_edit_border_grey"
                            android:cursorVisible="true"
                            android:ems="10"
                            android:inputType="number"
                            android:hint="Phone Number"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="10dp"
                            android:textColor="@color/Black"
                            android:textCursorDrawable="@null"
                            android:layout_below="@+id/textView4" />


                        <EditText
                            android:id="@+id/editTextParentProfileEmailAddress"
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="11dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/text_edit_border_grey"
                            android:cursorVisible="true"
                            android:ems="10"
                            android:inputType="textEmailAddress"
                            android:hint="Email Address"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="10dp"
                            android:textColor="@color/Black"
                            android:textCursorDrawable="@null"
                            android:layout_below="@+id/textView4" />

                        <EditText
                            android:id="@+id/editTextParentProfilePassword"
                            android:enabled="true"
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="11dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/text_edit_border_grey"
                            android:cursorVisible="true"
                            android:ems="10"
                            android:inputType="textPassword"
                            android:hint="Password"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="10dp"
                            android:textColor="@color/Black"
                            android:textCursorDrawable="@null"
                            android:layout_below="@+id/textView4" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">


                            <Button
                                android:id="@+id/buttonSaveParentProfile"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="60"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="20dp"
                                android:textSize="14dp"
                                android:background="@color/DarkRed"
                                android:text="Save/Update"
                                android:textColor="@color/White" />

                            <!--<Button-->
                            <!--android:id="@+id/btnUpdateParent"-->
                            <!--android:layout_width="100dp"-->
                            <!--android:layout_height="30dp"-->
                            <!--android:layout_marginLeft="10dp"-->
                            <!--android:layout_marginRight="10dp"-->
                            <!--android:layout_marginTop="30dp"-->
                            <!--android:textSize="10dp"-->
                            <!--android:background="@color/Maroon"-->
                            <!--android:text="Update Parent"-->
                            <!--android:textColor="@color/White" />-->

                        </LinearLayout>




        </LinearLayout>





    </ScrollView>


</LinearLayout>



</FrameLayout>