            <!--</LinearLayout>-->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textViewSelectedStudentResultManager"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="100"
                        android:width="0dp"
                        android:text="No Selected Student/Pupil"
                        android:textColor="@color/GreenYellow"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="13dp" />



            </LinearLayout>





            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="0dp"
                    app:srcCompat="@drawable/info_red" />

                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="100"
                    android:text="Please select the Result Session, Term, Student Level and Subject and fill up the form below."
                    android:textColor="@color/LightPink"
                    android:layout_marginLeft="5dp"
                    android:textSize="11dp" />



            </LinearLayout>



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:orientation="horizontal">


                <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                    android:layout_weight="49"
                    android:layout_marginLeft="10dp"
                android:orientation="vertical">


                <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Session:"
                android:textSize="14dp"
                android:textColor="@color/White"
                android:layout_marginLeft="0dp"/>

                <Spinner
                    android:id="@+id/spinnerResultManagerFragmentSession"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginRight="0dp"
                    android:background="@drawable/spinner_bg"
                    android:textColor="@color/Black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="49"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Term:"
                        android:textSize="14dp"
                        android:textColor="@color/White"
                        android:layout_marginLeft="0dp"/>

                    <Spinner
                        android:id="@+id/spinnerResultManagerFragmentTerm"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/spinner_bg"
                        android:textColor="@color/Black" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="49"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Level:"
                        android:textSize="14dp"
                        android:textColor="@color/White"
                        android:layout_marginLeft="0dp"/>

                    <Spinner
                        android:id="@+id/spinnerResultManagerFragmentLevel"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_marginRight="0dp"
                        android:background="@drawable/spinner_bg"
                        android:textColor="@color/Black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="49"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Subject:"
                        android:textSize="14dp"
                        android:textColor="@color/White"
                        android:layout_marginLeft="0dp"/>

                    <Spinner
                        android:id="@+id/spinnerResultManagerFragmentSubject"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/spinner_bg"
                        android:textColor="@color/Black" />

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="49"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Test/Exam Type:"
                        android:textSize="14dp"
                        android:textColor="@color/White"
                        android:layout_marginLeft="0dp"/>

                    <Spinner
                        android:id="@+id/spinnerResultManagerFragmentExamType"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/spinner_bg"
                        android:textColor="@color/Black" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:id="@+id/tabResultManagerPupilList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:layout_marginTop="20dp"
            android:orientation="vertical">



            <!--<TextView-->
                <!--android:id="@+id/textViewExistingSelectionScoresResultManagerPupilList"-->
