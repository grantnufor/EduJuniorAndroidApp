            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout1"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">



                <EditText
                    android:id="@+id/editTextResultManagerScore"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:cursorVisible="true"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Score"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="14dp"
                    android:textColor="@color/Black"
                    android:textCursorDrawable="@null"
                    android:layout_below="@+id/textView4" />


            </com.google.android.material.textfield.TextInputLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="100"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/buttonResultManagerSave"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="35"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="14dp"
                    android:background="@drawable/steel_blue_button"
                    android:text="Save"
                    android:textColor="@color/White" />


                <Button
                    android:id="@+id/buttonResultManagerUpdate"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="40"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="14dp"
                    android:background="@drawable/steel_blue_button"
                    android:text="Update"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/buttonResultManagerCancel"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="35"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="14dp"
                    android:background="@drawable/dark_red_button"
                    android:text="Cancel"
                    android:textColor="@color/White" />


                <TextView
                    android:id="@+id/textViewSelectedValueResultManager"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="100"
                    android:width="0dp"
                    android:visibility="invisible"
                    android:text=""
                    android:textColor="@color/GreenYellow"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="13dp" />




            </LinearLayout>


            <WebView
                android:id="@+id/webviewSmsResultManager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>

        </LinearLayout>




    </LinearLayout>

</ScrollView>

</FrameLayout>