    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            tools:context=".SplashScreenActivity">


            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="horizontal"
                android:layout_centerHorizontal="true">

            </LinearLayout>



            <LinearLayout
                android:id="@+id/llayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout1"
                android:orientation="vertical"
                android:layout_centerHorizontal="true">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/logoblack" />


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome to EduJunior!"
                    app:fontFamily="@font/montserrat"
                    android:layout_marginBottom="20dp"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    android:gravity="center"
                    android:textAlignment="center"

                    />



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/schoolkids"/>







                <Button
                    android:id="@+id/btnSignUpAsUser"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_button"
                    android:text="Sign Up"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/White"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    app:fontFamily="@font/montserrat"/>




                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="I already have an EduJunior Account"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/Maroon"
                    android:textAlignment="center"
                    android:gravity="center"
                    app:fontFamily="@font/montserrat"/>



                <Button
                    android:id="@+id/btnSignIn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dark_blue_button"
                    android:text="Sign In"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/White"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    app:fontFamily="@font/montserrat"/>






                <com.google.android.gms.ads.AdView
                    xmlns:ads="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/adViewHome"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    ads:adSize="BANNER"
                    ads:adUnitId="ca-app-pub-7947549094897909/9626397790" />


<!--                <com.google.android.gms.ads.doubleclick.PublisherAdView-->
<!--                    xmlns:ads="http://schemas.android.com/apk/res-auto"-->
<!--                    android:id="@+id/publisherAdViewHome"-->
<!--                    android:layout_width="fill_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginTop="-140dp"-->
<!--                    android:layout_gravity="center"-->
<!--                    ads:adSize="BANNER"-->
<!--                    ads:adUnitId="ca-app-pub-7947549094897909/4715345294"-->
<!--                    >-->

<!--                    &lt;!&ndash;        ads:adUnitId="ca-app-pub-7947549094897909/4715345294"&ndash;&gt;-->
<!--                    &lt;!&ndash;        ads:adUnitId="/6499/example/banner"&ndash;&gt;-->
<!--                </com.google.android.gms.ads.doubleclick.PublisherAdView>-->


            </LinearLayout>



            <Button
                android:id="@+id/btnSignUpAsSchool"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dark_red_button"
                android:text="Sign Up School"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/White"
                android:layout_marginTop="20dp"
                android:visibility="invisible"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                app:fontFamily="@font/montserrat"/>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>