<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".HomeActivity"
    android:background="@color/White"
    android:focusableInTouchMode="true"
    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="8dp">


    <!--<ImageView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:src="@drawable/shirley4"-->
    <!--android:scaleType="centerCrop"/>-->


    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            tools:context=".SplashScreenActivity">


            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="horizontal"
                android:layout_centerHorizontal="true">

            </LinearLayout>



            <LinearLayout
                android:id="@+id/llayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout1"
                android:orientation="vertical"
                android:layout_centerHorizontal="true">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/logoblack" />


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome to EduJunior!"
                    app:fontFamily="@font/montserrat"
                    android:layout_marginBottom="20dp"
                    android:textStyle="bold"
                    android:textSize="26dp"
                    android:gravity="center"
                    android:textAlignment="center"

                    />



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:src="@drawable/schoolkids"/>




                <Button
                    android:id="@+id/btnSignUpAsSchool"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dark_red_button"
                    android:text="Sign Up School"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/White"
                    android:layout_marginTop="30dp"
                    android:visibility="visible"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    app:fontFamily="@font/montserrat"/>



                <Button
                    android:id="@+id/btnSignUpAsParent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_button"
                    android:text="Sign Up As Parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/White"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    app:fontFamily="@font/montserrat"/>




                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="I already have an EduJunior Account"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/Maroon"
                    android:textAlignment="center"
                    android:gravity="center"
                    app:fontFamily="@font/montserrat"/>



                <Button
                    android:id="@+id/btnSignIn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dark_blue_button"
                    android:text="Sign In"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/White"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    app:fontFamily="@font/montserrat"/>




            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>