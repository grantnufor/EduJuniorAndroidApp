    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/layout_rounded_corners_red"
            android:orientation="vertical">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/setupicon"/>

           <TextView
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="0dp"
               android:layout_marginBottom="20dp"
               android:layout_marginLeft="0dp"
               android:textAlignment="center"
               android:gravity="center"
               android:text="Welcome to School Setup"
               android:textSize="20dp"
               android:fontFamily="@string/common_google_play_services_updating_text"
               android:textColor="@color/MintCream"
               />



            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="0dp"
                android:textAlignment="center"
                android:gravity="center"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="Please click on the menu bar top left of this screen to navigate through various aspects of this setup"
                android:textSize="15dp"
                android:fontFamily="@string/common_google_play_services_updating_text"
                android:textColor="@color/White"
                />



        </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:orientation="vertical">

        <Button
