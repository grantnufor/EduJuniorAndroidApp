            android:textColor="@color/White"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/dark_blue_button"
            android:text="Manage Terms"
            />


        <Button
            android:id="@+id/buttonSchoolSetupTeachers"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:textColor="@color/White"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/dark_green_button"
            android:text="Manage Teachers"
            />


        <Button
            android:id="@+id/buttonSchoolSetupParents"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:textColor="@color/White"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/red_button"
            android:text="Manage Parents"
            />


        <Button
            android:id="@+id/buttonSchoolSetupPupils"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:textColor="@color/White"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/dark_blue_button"
            android:text="Manage Pupils"
            />



        <Button
            android:id="@+id/buttonSchoolSetupBackToHome"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:textColor="@color/White"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/red_button"
            android:text="Back to Home"
            />

