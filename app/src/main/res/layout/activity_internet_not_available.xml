<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:gravity="center"
android:paddingLeft="10dp"
android:paddingRight="10dp"
tools:context=".InternetNotAvailableActivity">



<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/maintenance"
    android:layout_marginRight="20dp"
    android:layout_marginTop="-100dp"
    />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:gravity="center"
    android:textSize="20dp"
    android:textColor="@color/Black"
    android:text="Oops! Looks like your internet connection is too poor. This app may not work as expected. Please check your connection."
    />


<Button
    android:id="@+id/buttonInternetNotAvailableOk"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/dark_red_button"
    android:text="Ok"
    android:textColor="@color/White"
    android:layout_marginTop="20dp"
    />


</LinearLayout>