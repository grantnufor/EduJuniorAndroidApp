<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SchoolFeeReceiptActivity">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linearLayoutSchoolReceiptList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:background="@color/Black"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textViewSchoolFeeReceiptSchoolName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="- School Name -"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="10dp"
            android:textSize="25dp"
            android:gravity="center"
            android:textStyle="italic"
            android:textAlignment="center"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/White" />


        <TextView
            android:id="@+id/textViewSchoolFeeReceiptPupilName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="No Pupil Name"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="10dp"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="italic"
            android:textAlignment="center"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/Red" />


    </LinearLayout>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:paddingRight="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textView22"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Term:"
            android:layout_weight="5"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewSchoolFeeReceiptTerm"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="NA"
            android:layout_weight="95"
            android:textColor="@color/Red"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textSize="20dp" />


    </LinearLayout>



        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:paddingRight="0dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textView23"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Session:"
                android:layout_weight="5"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewSchoolFeeReceiptSession"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="NA"
                android:layout_weight="95"
                android:textColor="@color/Red"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textSize="20dp" />


        </LinearLayout>



        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:paddingRight="0dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textView24"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Amount to Pay:"
                android:layout_weight="5"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewSchoolFeeReceiptAmountToPay"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="NA"
                android:layout_weight="95"
                android:textColor="@color/Red"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textSize="20dp" />


        </LinearLayout>



        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:paddingRight="0dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textView25"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Amount Paid:"
                android:layout_weight="5"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewSchoolFeeReceiptAmountPaid"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="NA"
                android:layout_weight="95"
                android:textColor="@color/Red"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textSize="20dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:paddingRight="0dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textView26"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Balance:"
                android:layout_weight="5"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewSchoolFeeReceiptBalance"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="NA"
                android:layout_weight="95"
                android:textColor="@color/Red"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textSize="20dp" />


        </LinearLayout>


        <TextView
            android:id="@+id/textViewSchoolFeeReceiptThanks"
            android:layout_height="100dp"
            android:layout_width="fill_parent"
            android:text="Thanks for making payments!"
            android:layout_marginTop="50dp"
            android:layout_weight="95"
            android:textColor="@color/Red"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textSize="20dp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>